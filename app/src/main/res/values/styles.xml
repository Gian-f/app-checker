<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonTransparent">
        <item name="android:background">@drawable/button_rounded_background</item>
    </style>
    <style name="ButtonWhite">
        <item name="android:background">@drawable/button_rounded_white</item>
    </style>
    <style name="QuestionBackground">
        <item name="android:background">@drawable/background_question</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>
</resources>